
  <div class="row display-none">
    <div class="from-travel col-sm-12 col-md-12 col-lg-6"  data-controller="flatpicker" >
      <%= simple_form_for(@travel) do |f|%>
        <%= f.input :location,
              input_html: { data: { geocoder_target: "location" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>
        <%= f.input :start_date, as: :string, required: false, input_html: {  data: { flatpicker_target: "start"}, class:"input" } %>
        <%= f.input :end_date, as: :string, required: false, input_html: {data: { flatpicker_target: "end"}, class:"input"} %>
        <%= f.button :submit, class: "btn-form"%>
      <%end%>
    </div>

    <div class="from-image-travel col-sm-12 col-md-12 col-lg-6">

    </div>

  </div>
